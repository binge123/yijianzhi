            android:layout_toRightOf="@id/first_listview_tubiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/first_listview_text1"
            android:textSize="@dimen/first_gridview_text1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/first_listview_text1"
