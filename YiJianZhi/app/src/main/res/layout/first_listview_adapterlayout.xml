                android:text="New Text"
                android:textSize="@dimen/first_gridview_text2"
                android:id="@+id/first_listview_time"
                android:textColor="@color/first_gridview_xiaozi"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
