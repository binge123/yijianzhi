<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="呵呵New Text"
        android:id="@+id/zhaopininfo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        android:id="@+id/list_address"
        android:layout_below="@+id/zhaopininfo"
        android:layout_alignLeft="@+id/zhaopininfo"
        android:layout_alignStart="@+id/zhaopininfo"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止时间"
        android:id="@+id/list_tiem"
        android:layout_alignBottom="@+id/list_address"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:id="@+id/list_money"
        android:layout_alignBottom="@+id/list_tiem"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

</RelativeLayout>
