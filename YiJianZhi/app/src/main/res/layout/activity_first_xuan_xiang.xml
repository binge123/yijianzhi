<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.best.demo.yijianzhi.FirstXuanXiangActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/firstxuanxiang_didian">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#3191E8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兰山区"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:id="@+id/firstxuanxiang_didian1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/daosanjiao"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#3191E8"
                android:layout_height="50dp"
                android:gravity="center"
                android:id="@+id/firstxuanxiang_feilei">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:id="@+id/firstxuanxiang_feilei1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/daosanjiao"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="#3191E8"
                android:gravity="center"
                android:id="@+id/firstxuanxiang_shi">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时段"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:id="@+id/firstxuanxiang_shi1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/daosanjiao"/>

            </LinearLayout>
        </LinearLayout>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/firstxuanxiang_list" />
    </LinearLayout>

</RelativeLayout>
