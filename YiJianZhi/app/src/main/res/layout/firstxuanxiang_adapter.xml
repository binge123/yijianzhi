<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:background="@drawable/ji"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/firstxuanxiang_image" />
        <TextView
            android:text="sdaddad"
            android:layout_alignTop="@id/firstxuanxiang_image"
            android:layout_toRightOf="@id/firstxuanxiang_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/firstxuanxiang_adapter_text1"
            android:textSize="@dimen/first_gridview_text1"
            android:textColor="#000"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/firstxuanxiang_adapter_text1"
            android:layout_alignStart="@+id/firstxuanxiang_adapter_text1"
            android:layout_alignBottom="@+id/firstxuanxiang_image"
            android:layout_below="@+id/firstxuanxiang_adapter_text1"
            android:gravity="center|left">
            <TextView
                android:layout_weight="1"
                android:text="dsadsdsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firstxuanxiang_adapter_xinzi"
                android:textSize="@dimen/first_gridview_text2"
                android:textColor="@color/first_gridview_xiaozi"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="#000"
                android:textSize="@dimen/first_gridview_text2"
                android:id="@+id/firstxuanxiang_adapter_time"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="#000"
                android:textSize="@dimen/first_gridview_text2"
                android:id="@+id/firstxuanxiang_adapter_didian"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
