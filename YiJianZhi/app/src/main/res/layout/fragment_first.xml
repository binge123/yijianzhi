<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent">
    <ScrollView
        android:id="@+id/first_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top">

            <android.support.v4.view.ViewPager
                android:layout_width="fill_parent"
                android:layout_height="@dimen/first_banner"
                android:id="@+id/first_banner"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_banner"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearlayout"
                android:padding="5dp"
                android:background="#fff">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#c5c5c5">

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="#fff">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/zhuye_remen"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_remen"
                                    android:textColor="@color/first_gridview_remen"
                                    android:textSize="@dimen/first_gridview_text1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_remen1"
                                    android:textColor="@color/first_gridview_xiaozi"
                                    android:textSize="@dimen/first_gridview_text2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_marginTop="1dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="#fff">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/zhuye_xianshi"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_xianshi"
                                    android:textColor="@color/first_gridview_xianshi"
                                    android:textSize="@dimen/first_gridview_text1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_xianshi1"
                                    android:textColor="@color/first_gridview_xiaozi"
                                    android:textSize="@dimen/first_gridview_text2"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="#fff">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/zhuye_fujin"/>
                            <LinearLayout
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="2dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_fujin"
                                    android:textColor="@color/first_gridview_fujin"
                                    android:textSize="@dimen/first_gridview_text1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_fujin1"
                                    android:textColor="@color/first_gridview_xiaozi"
                                    android:textSize="@dimen/first_gridview_text2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:padding="5dp"
                            android:background="#fff">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/zhuye_gengduo"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_gengduo"
                                    android:textColor="@color/first_gridview_gengduo"
                                    android:textSize="@dimen/first_gridview_text1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_gengduo1"
                                    android:textColor="@color/first_gridview_xiaozi"
                                    android:textSize="@dimen/first_gridview_text2"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <!--<GridView-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/first_gridview"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:numColumns="2"-->
                <!--android:verticalSpacing="1dp"-->
                <!--android:horizontalSpacing="1dp"-->
                <!--android:background="@color/first_gridview_back"/>-->
            </LinearLayout>
            <TextView
                android:id="@+id/tuijian"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_tuijian"
                android:layout_below="@+id/linearlayout"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/first_gridview_text1"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tuijian"
                android:layout_centerHorizontal="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <com.best..MyListViewForScollProbiem
                    android:id="@+id/first_listView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                </com.best..MyListViewForScollProbiem>


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>
