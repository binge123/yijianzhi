<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ECECEC">
    <RelativeLayout
    android:id="@+id/more_Rly1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#3191E8">
    <ImageView
        android:id="@+id/Iv1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="mFanHui"
        android:layout_marginLeft="20dp"
        android:background="@drawable/fanhui"/>
    <TextView
        android:id="@+id/Tv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="更多"
        android:textSize="20sp"
        android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:id="@+id/more_zhuan"
        android:layout_below="@id/more_Rly1"
        android:gravity="center_vertical"
        android:onClick="zhuan"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要招聘"
        android:id="@+id/more_huan"
        android:textColor="#222"
        android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:onClick="jianxin"
        android:id="@+id/more_jian"
        android:layout_below="@id/more_zhuan"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:textColor="#222"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:id="@+id/more_guan"
        android:layout_marginTop="1dp"
        android:layout_below="@id/more_jian"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textColor="#222"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:layout_below="@id/more_guan"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#222"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
</RelativeLayout>
